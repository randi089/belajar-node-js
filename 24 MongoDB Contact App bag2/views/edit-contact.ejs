<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="my-3"><%= title %></h2>

            <%
            let nama = '', email = '', nohp = ''; 
            if (typeof errors != 'undefined') {
              errors.forEach(error => {
                  if (error.param == 'nama') {
                    nama = error.msg;
                  }
                  if (error.param == 'email') {
                    email = error.msg;
                  }
                  if (error.param == 'nohp') {
                    nohp = error.msg;
                  }
                }); 
            }%>

            <form method="post" action="/contact?_method=PUT">
                <input type="hidden" name="_id" value="<%= contact._id; %>">
                <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama%>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" class="form-control <%= nama != '' ? 'is-invalid' : ''; %>" id="nama" name="nama" required value="<%= contact.nama%>">
                  <div class="invalid-feedback">
                    <%= nama; %>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control <%= email != '' ? 'is-invalid' : ''; %>" id="email" name="email" required value="<%= contact.email%>">
                  <div class="invalid-feedback">
                    <%= email; %>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="nohp" class="form-label">No HP</label>
                  <input type="text" class="form-control <%= nohp != '' ? 'is-invalid' : ''; %>" id="nohp" name="nohp" required value="<%= contact.nohp%>">
                  <div class="invalid-feedback">
                    <%= nohp; %>
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">Ubah Contact</button>
              </form>
        </div>
    </div>
</div>